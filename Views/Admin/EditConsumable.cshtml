@model CareConnect.Models.Consumable


@{
    ViewData["Title"] = "Edit Consumable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Consumable</h2>

<form asp-action="EditConsumable" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ConsumableId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantityAvailable" class="control-label"></label>
        <input asp-for="QuantityAvailable" class="form-control" />
        <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplierId" class="control-label"></label>
        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.Suppliers"></select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-action="ViewAllConsumables" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}