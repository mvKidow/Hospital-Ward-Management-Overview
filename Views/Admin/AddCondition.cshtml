@model CareConnect.Models.Condidtion
@{
    ViewData["Title"] = "Add New Condition";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container" style="padding: 20px; border-radius: 5px;">
    <h4 style="text-align: center; background-color: #78C2C2; padding: 10px;">Add New Condition</h4>
    <form id="conditionForm" asp-action="AddCondition" method="post">
        <div class="form-group">
            <label asp-for="Name">Condition Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group text-center" style="margin-top: 20px;">
            <button type="submit" class="btn btn-primary" style="color: white;">Add Condition</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
