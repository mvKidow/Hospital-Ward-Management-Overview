@model CareConnect.Models.Ward

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Ward List";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center">Add New Ward</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddWard" method="post">
                        <div class="form-group">
                            <label asp-for="WardName">Ward Name</label>
                            <input asp-for="WardName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Type">Type</label>
                            <input asp-for="Type" class="form-control" required maxlength="50">
                        </div>
                        <div class="form-group">
                            <label asp-for="Capacity">Capacity</label>
                            <input asp-for="Capacity" class="form-control" type="number" required>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Add Ward</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>