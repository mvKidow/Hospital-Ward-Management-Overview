@model PrescriptionViewModel
@{
    // ViewData["Title"] = "Delete Prescription";
    Layout = "~/Views/Doctor/PrescriptionDelete";
}
<h2>Delete Prescription</h2>


<div>
    <strong>Name:</strong>@Model.Name<br />
    <strong>Date:</strong> @Model.Date <br />
    <strong>Dosage:</strong> @Model.Dosage <br />
    <strong>Medication:</strong>@Model.Medication<br />

</div>

<form asp-action="PrescriptionDelete" method="post">
    <input type="hidden" asp-for="PrescriptionId" />
    class="d-inline ml-2"
    onsubmit="return confirm('Are you sure you want to delete this Prescription?');">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Prescription")" class="btn btn-secondary">Cancel</a>
</form>
