@model Connect.Models.NurseMedicationViewModel
@{
    ViewData["Title"] = "Administer Medication";
}

<h2>Administer Medication</h2>

<form asp-action="AdministerMedication" method="post">
    <div class="form-group">
        <label for="MedicationName">Medication Name</label>
        <input type="text" asp-for="MedicationName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Dose">Dose</label>
        <input type="number" asp-for="Dose" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Frequency">Frequency</label>
        <input type="text" asp-for="Frequency" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Administer</button>
</form>