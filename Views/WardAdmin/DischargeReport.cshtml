@{
    ViewData["Title"] = "Discharge Reports";
    Layout = "~/Views/Shared/_WardAdminLayout.cshtml";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Search Discharge Reports</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                    <form asp-action="DischargeReport" method="post" class="mb-4">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="patientFileId" class="form-label">Patient File ID</label>
                            <input type="number"
                                   class="form-control"
                                   id="patientFileId"
                                   name="patientFileId"
                                   required
                                   min="1">
                        </div>
                        <button type="submit" class="btn btn-primary">Search Report</button>
                    </form>
                    @if (ViewBag.ReportExists != null && ViewBag.ReportExists == false)
                    {
                        <div class="alert alert-warning">
                            No discharge report found for this Patient File ID.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>