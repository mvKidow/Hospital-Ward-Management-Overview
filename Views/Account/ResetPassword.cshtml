@model Connect.Models.ResetPasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Reset Password</title>
    <style>
        .bg-gradient-primary {
            background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
            background-size: cover;
            min-height: 100vh;
        }

        .form-control-user {
            border-radius: 10rem;
            padding: 1.5rem 1rem;
            font-size: 0.8rem;
            margin-bottom: 1rem;
        }

        .btn-user {
            border-radius: 10rem;
            padding: 0.75rem 1rem;
            font-size: 0.8rem;
        }

        .password-requirements {
            font-size: 0.8rem;
            color: #666;
            margin-bottom: 1rem;
        }

        .password-requirements ul {
            padding-left: 1.2rem;
            margin-bottom: 0;
        }

        #errorMessage {
            display: none;
            margin-top: 10px;
        }
    </style>
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-5 bg-login-image">
                                <img src="~/images/logosortof.webp" alt="CareConnect Logo" class="img-fluid" />
                            </div>
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Reset Your Password</h1>
                                        <p class="mb-4">Please enter your new password below.</p>
                                    </div>

                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                                    }

                                    <div class="alert alert-danger" id="errorMessage"></div>

                                    <form id="resetPasswordForm" asp-action="ResetPassword" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input asp-for="Email" type="hidden" />
                                        <input asp-for="Token" type="hidden" />

                                        <div class="form-group">
                                            <input asp-for="NewPassword" type="password" 
                                                   class="form-control form-control-user" 
                                                   placeholder="New Password"
                                                   required
                                                   minlength="8">
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <input asp-for="ConfirmPassword" type="password" 
                                                   class="form-control form-control-user" 
                                                   placeholder="Confirm New Password"
                                                   required>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <div class="password-requirements">
                                            <p class="mb-2">Password must contain:</p>
                                            <ul>
                                                <li>At least 8 characters</li>
                                                <li>At least one uppercase letter</li>
                                                <li>At least one lowercase letter</li>
                                                <li>At least one number</li>
                                                <li>At least one special character</li>
                                            </ul>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block w-100">
                                            Reset Password
                                        </button>
                                    </form>

                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Account" asp-action="Login">Remember your password? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            const form = $('#resetPasswordForm');
            const errorMessage = $('#errorMessage');

            // Password strength validation
            function validatePassword(password) {
                const minLength = password.length >= 8;
                const hasUpper = /[A-Z]/.test(password);
                const hasLower = /[a-z]/.test(password);
                const hasNumber = /\d/.test(password);
                const hasSpecial = /[!#$%^&*(),.?":{}|<>]/.test(password);

                return minLength && hasUpper && hasLower && hasNumber && hasSpecial;
            }

            form.on('submit', function(e) {
                e.preventDefault();
                const submitButton = $(this).find('button[type="submit"]');
                const newPassword = $('#NewPassword').val();
                const confirmPassword = $('#ConfirmPassword').val();

                errorMessage.hide();

                // Validate password strength
                if (!validatePassword(newPassword)) {
                    errorMessage.text("Password does not meet the requirements").show();
                    return;
                }

                // Validate password match
                if (newPassword !== confirmPassword) {
                    errorMessage.text("Passwords do not match").show();
                    return;
                }

                submitButton.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("ResetPassword", "Account")',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        email: $('#Email').val(),
                        token: $('#Token').val(),
                        newPassword: newPassword,
                        confirmPassword: confirmPassword
                    }),
                    success: function(response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            errorMessage.text(response.message).show();
                        }
                    },
                    error: function(xhr, status, error) {
                        errorMessage.text("An error occurred. Please try again.").show();
                        console.error("Error:", error);
                    },
                    complete: function() {
                        submitButton.prop('disabled', false);
                    }
                });
            });
        });
    </script>
</body>
</html>